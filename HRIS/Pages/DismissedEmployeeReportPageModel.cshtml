@page "{id?}"
@model HRIS.Pages.DismissedEmployeeReportPageModel
@{
    ViewData["Title"] = "Звіт по звільненим співробітникам";
}
<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="card mb-4">
        <div class="card-header">Згенерувати звіт по звільненим співробітникам</div>
        <div class="card-body">
            <form asp-area="" asp-page="/DismissedEmployeeReportPage" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="SearchCriteria" class="form-label">Співробітник (опційно)</label>
                    <input asp-for="SearchCriteria" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Дата початку</label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                </div>
                <div class="mb-3">
                    <label asp-for="ReportDate" class="form-label">Дата звіту</label>
                    <input asp-for="ReportDate" class="form-control" type="date" />
                </div>
                <button type="submit" class="btn btn-success">Згенерувати звіт</button>
            </form>
        </div>
    </div>
</div>
