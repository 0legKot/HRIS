@page
@model DismissalPageModel
@{
    ViewData["Title"] = "Звiльнення";
}
@if (Model.NewItem != null) {
    <form asp-area="" asp-page="/DismissalPageModel" method="post">
        @Html.AntiForgeryToken()
        <div>
            <input asp-for="NewItem.Id" hidden value="-1" />
        </div>
        <div>
            <label asp-for="NewItem.DismissalDate"></label>
            <input asp-for="NewItem.DismissalDate" />
        </div>
        <div class="form-group">
            <label asp-for="SelectedEmployeeId">Співробітник</label>
            <select asp-for="SelectedEmployeeId" asp-items="Model.Employees" class="form-control"></select>
        </div>
        <button type="submit">Save</button>
    </form>
} else if (Model.CurrentItem == null) {
    <a class="nav-link text-dark" asp-area="" asp-page="/DismissalPageModel" asp-route-id="-1">New</a>
    <div class="text-center">
        <table class="table table-bordered">
            <tr>
                <th>Degree</th>
                <th>Description</th>
            </tr>
            @foreach (var item in Model.Items!) {
                <tr>
                    <td>@item.DismissalDate</td>
                    <td>@item.Employee.EmployeePerson.PersonName</td>
                </tr>
            }
        </table>
    </div>
} 

